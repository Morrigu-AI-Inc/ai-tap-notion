
{
  "openapi": "3.0.0",
  "info": {
    "title": "Notion API",
    "version": "2022-06-28"
  },
  "paths": {
    "/v1/pages/{page_id}": {
      "patch": {
        "summary": "Archive or restore a Notion page",
        "parameters": [
          {
            "name": "page_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "archived": {
                    "type": "boolean"
                  }
                },
                "required": [
                  "archived"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Page": {
        "type": "object",
        "properties": {
          "object": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "created_time": {
            "type": "string",
            "format": "date-time"
          },
          "last_edited_time": {
            "type": "string",
            "format": "date-time"
          },
          "created_by": {
            "$ref": "#/components/schemas/User"
          },
          "last_edited_by": {
            "$ref": "#/components/schemas/User"
          },
          "cover": {
            "nullable": true
          },
          "icon": {
            "$ref": "#/components/schemas/Icon"
          },
          "parent": {
            "$ref": "#/components/schemas/Parent"
          },
          "archived": {
            "type": "boolean"
          },
          "properties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/PropertyValue"
            }
          },
          "url": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "object": {
            "type": "string"
          },
          "id": {
            "type": "string"
          }
        }
      },
      "Icon": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "emoji": {
            "type": "string"
          }
        }
      },
      "Parent": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "database_id": {
            "type": "string"
          }
        }
      },
      "PropertyValue": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    }
  }
}
