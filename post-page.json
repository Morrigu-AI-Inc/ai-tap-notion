
{
  "openapi": "3.0.0",
  "info": {
    "title": "Notion API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/pages": {
      "post": {
        "summary": "Create a page",
        "description": "Creates a new page that is a child of an existing page or database.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreatePageRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions to create page"
          }
        }
      },
      "get": {
        "summary": "Retrieve a page",
        "description": "Retrieves a Notion page by ID",
        "parameters": [
          {
            "name": "page_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page"
                }
              }
            }
          }
        }
      }
    },
    "/v1/pages/{page_id}/properties": {
      "patch": {
        "summary": "Update page properties",
        "description": "Updates properties of a Notion page",
        "parameters": [
          {
            "name": "page_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UpdatePagePropertiesRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Page"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions to update page"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreatePageRequest": {
        "type": "object",
        "properties": {
          "parent": {
            "$ref": "#/components/schemas/Parent"
          },
          "properties": {
            "type": "object"
          },
          "children": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Block"
            }
          }
        },
        "required": [
          "parent"
        ]
      },
      "UpdatePagePropertiesRequest": {
        "type": "object",
        "properties": {
          "properties": {
            "type": "object"
          }
        },
        "required": [
          "properties"
        ]
      },
      "Parent": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "page_id": {
            "type": "string"
          },
          "database_id": {
            "type": "string"
          }
        }
      },
      "Block": {
        "type": "object"
      },
      "Page": {
        "type": "object",
        "properties": {
          "object": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "created_time": {
            "type": "string",
            "format": "date-time"
          },
          "last_edited_time": {
            "type": "string",
            "format": "date-time"
          },
          "archived": {
            "type": "boolean"
          },
          "properties": {
            "type": "object"
          },
          "parent": {
            "$ref": "#/components/schemas/Parent"
          },
          "url": {
            "type": "string"
          }
        }
      }
    }
  }
}
