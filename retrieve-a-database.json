          },
          "last_edited_time": {
            "type": "string",
            "format": "date-time"
          },
          "title": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RichText"
            }
          },
          "properties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/PropertyConfiguration"
            }
          },
          "parent": {
            "$ref": "#/components/schemas/Parent"
          },
          "url": {
            "type": "string"
          }
        }
      },
      "RichText": {
        "type": "object",
        "properties": {
