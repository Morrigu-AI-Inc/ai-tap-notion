
{
  "openapi": "3.0.0",
  "info": {
    "title": "Notion API",
    "version": "1.0.0"
  },
  "paths": {
    "/v1/databases": {
      "post": {
        "summary": "Create a database",
        "description": "Creates a database as a subpage in the specified parent page, with the specified properties schema. Currently, the parent of a new database must be a Notion page or a wiki database.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateDatabaseRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Database"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "403": {
            "description": "Forbidden - Integration does not have insert content capabilities"
          },
          "404": {
            "description": "Parent page not found or integration does not have access"
          },
          "429": {
            "description": "Too many requests"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateDatabaseRequest": {
        "type": "object",
        "properties": {
          "parent": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "database_id": {
                "type": "string"
              }
            },
            "required": [
              "type"
            ]
          },
          "title": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RichText"
            }
          },
          "properties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/DatabaseProperty"
            }
          }
        },
        "required": [
          "parent",
          "properties"
        ]
      },
      "RichText": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "text": {
            "type": "object",
            "properties": {
              "content": {
                "type": "string"
              }
            },
            "required": [
              "content"
            ]
          },
          "annotations": {
            "type": "object"
          },
          "plain_text": {
            "type": "string"
          },
          "href": {
            "type": "string"
          }
        },
        "required": [
          "type"
        ]
      },
      "DatabaseProperty": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/DatabasePropertyStatus"  
          },
          "options": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Option"
            }
          }
        },
        "required": [
          "name",
          "type"
        ]
      },
      "DatabasePropertyStatus": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "empty"
            ]
          }
        },
        "required": [
          "type"
        ]
      },
      "Option": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "color": {
            "type": "string"
          }
        },
        "required": [
          "id",
          "name",
          "color"
        ]
      },
      "Database": {
        "type": "object",
        "properties": {
          "object": {
            "type": "string"
          },
          "id": {
            "type": "string"
          },
          "created_time": {
            "type": "string",
            "format": "date-time"
          },
          "last_edited_time": {
            "type": "string",
            "format": "date-time"
          },
          "title": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/RichText"
            }
          },
          "properties": {
            "type": "object",
            "additionalProperties": {
              "$ref": "#/components/schemas/DatabaseProperty"
            }
          }
        },
        "required": [
          "object",
          "id",
          "created_time",
          "last_edited_time",
          "title",
          "properties"
        ]
      }
    }
  }
}
